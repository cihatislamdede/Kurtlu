<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/giris2">

    <EditText
        android:id="@+id/usernameText2"
        android:layout_width="164dp"
        android:layout_height="44dp"
        android:layout_marginTop="248dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Kullanici adiniz"
        android:inputType="textPersonName"
        android:textColor="#FDFDFD"
        android:textColorHint="#B39595"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordText2"
        android:layout_width="164dp"
        android:layout_height="46dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Åžifreniz"
        android:inputType="textPersonName"
        android:password="true"
        android:textColor="#FDFDFD"
        android:textColorHint="#B39595"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText2" />

    <Button
        android:id="@+id/button"
        android:layout_width="79dp"
        android:layout_height="26dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="150dp"
        android:alpha="0.01"
        android:onClick="signIn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordText2"
        app:layout_constraintVertical_bias="0.228" />


</androidx.constraintlayout.widget.ConstraintLayout>