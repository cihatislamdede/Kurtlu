<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3">

    <Button
        android:id="@+id/button"
        android:layout_width="105dp"
        android:layout_height="36dp"
        android:layout_marginBottom="215dp"
        android:alpha="0.01"
        android:onClick="signIn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="264dp"
        android:layout_height="0dp"
        android:layout_marginTop="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yuvarlak" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="266dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameText2"
        app:srcCompat="@drawable/yuvarlak" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:layout_marginBottom="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/girisyap" />

    <EditText
        android:id="@+id/usernameText2"
        android:layout_width="237dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Kullanici adiniz"
        android:inputType="textPersonName"
        android:textColor="#FDFDFD"
        android:textColorHint="#B39595"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <EditText
        android:id="@+id/passwordText2"
        android:layout_width="241dp"
        android:layout_height="43dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:hint="Åžifreniz"
        android:inputType="textPersonName"
        android:password="true"
        android:textColor="#FDFDFD"
        android:textColorHint="#B39595"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />


</androidx.constraintlayout.widget.ConstraintLayout>